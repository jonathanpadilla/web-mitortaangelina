{% extends 'base.html.twig' %}

{% block css %}
	<link rel="stylesheet" href="{{ absolute_url(asset('css/jquery.steps.css')) }}">
	<style type="text/css">
		.wizard > .steps > ul > li {
		    width: 20% !important;
		}

		.tabla_detalle{
			    width: 100%;
			    height: 460px;
			    background-color: #ff7283;
			    border-radius: 10px;
		}

		#arma-torta h2{
		    font-family: 'nexalight';
		    font-weight: normal;
		    color: #484848;
		}

		#arma-torta h3{
			color: #ff7282;
		    font-weight: 500 !important;
		    font-family: 'Avenir Next LT Pro';
		    font-weight: normal;
		}

		#arma-torta input{
			border: 5px solid #b1b1b1;
    		border-radius: 13px;
    		text-align: center;
    		width:100px;
    		margin:0 auto;
    		font-size: 16px;
		}

		#arma-torta select{
			font-size: 16px;
		    height: 46px;
		    border: 5px solid #b1b1b1;
		    border-radius: 13px;
		    margin-bottom: 0;
		}

		#arma-torta label{
			margin-bottom: 0;
			font-family: 'Avenir Next LT Pro';
		    font-weight: bold;
		    color: #ff7282;
		}

		#arma-torta textarea{
			height: 160px;
			border-radius: 10px;
			border: 0;
			resize: none;
		}

		.cont_observacion{
			padding: 0 15px;
		}

		.tabla_detalle h2{
			color:#fff !important;
		}

		.tabla_detalle ol{
			margin-left: 30px;
			height: 140px;
		}

		.tabla_detalle ol li{
			font-family: 'nexalight';
		    font-size: 18px;
		    color: #fff;
		}

		.content_input{
			width: 250px;
			margin: 0 auto;
		}

		.content-modal ul{
			list-style: none;
		}

		#btn_enviar_pedido, #btn_cancelar_pedido{
			border: 2px solid #ff7282;
		    padding: 5px;
		    color: #ff7282;
		}
	</style>
{% endblock %}

{% block content %}
<div id="tittle" class="title">
          
	<div class="row">
		<div class="medium-12 columns">

			<div class="wrapper">

			  	<h2>Mi Torta Angelina</h2>
			  	<img src="{{ absolute_url(asset('img/tbottom.png')) }}">

			</div>

		</div>
	</div>
</div>

<div id="cont-a">
  
    <div class="row">
		<div class="medium-12 columns">

			<div class="wrapper">

				<div id="txt-a">

					<!-- <h5>Paso 1</h5> -->
					<h4>BIENVENIDOS A ARMA TU TORTA</h4>
					<!-- <h5>PARA COMENZAR&#44; ELIGE EL TAMA&Ntilde;O</h5> -->
					
					<form id="form_arma" action="#" method="post">
						<div id="arma-torta">
						    <h3>Tamaño</h3>
						    <section>
						    	<h2>Tamaño</h2>
						        <div class="row">
						        	<div class="medium-8 columns">
						        		<h3>Cantidad de personas</h3>
						        		<div>
						        			<label for="cantidad">Personas</label>
						        			<input type="number" min="1" name="txt_cantidad" id="txt_cantidad">
						        		</div>
						        	</div>
						        	<div class="medium-4 columns">
						        		
										<div class="tabla_detalle">
											<h2>Pedido</h2>
											<ol>
												<li class="list_cantidad_personas"></li>
												<li class="list_evento"></li>
												<li class="list_relleno"></li>
												<li class="list_sabor"></li>
												<li class="list_cobertura"></li>
											</ol>
										</div>

						        	</div>
						        </div>
						    </section>
						    <h3>Evento</h3>
						    <section>
						    	<h2>Evento</h2>
						        <div class="row">
						        	<div class="medium-8 columns">
						        		<h3>Tipo de evento</h3>
						        		<div class="content_input">
						        			<label for="cantidad">Evento</label>
						        			<select name="select_evento" id="select_evento">
						        				<option value="default">Seleccionar</option>
						        				{% for evento in pasos if evento.tipo == 1 %}
						        					<option value="{{ evento.id }}">{{ evento.nombre }}</option>
						        				{% endfor %}
						        			</select>
						        		</div>
						        	</div>
						        	<div class="medium-4 columns">
						        		
										<div class="tabla_detalle">
											<h2>Pedido</h2>
											<ol>
												<li class="list_cantidad_personas"></li>
												<li class="list_evento"></li>
												<li class="list_relleno"></li>
												<li class="list_sabor"></li>
												<li class="list_cobertura"></li>
											</ol>
										</div>

						        	</div>
						        </div>
						    </section>
						    <h3>Relleno</h3>
						    <section>
						    	<h2>Relleno</h2>
						        <div class="row">
						        	<div class="medium-8 columns">
						        		<h3>Relleno de torta</h3>
						        		<div class="content_input">
						        			<label for="cantidad">Relleno</label>
						        			<select name="select_relleno" id="select_relleno">
						        				<option value="default">Seleccionar</option>
						        				{% for evento in pasos if evento.tipo == 2 %}
						        					<option value="{{ evento.id }}">{{ evento.nombre }}</option>
						        				{% endfor %}
						        			</select>
						        		</div>
						        	</div>
						        	<div class="medium-4 columns">
						        		
										<div class="tabla_detalle">
											<h2>Pedido</h2>
											<ol>
												<li class="list_cantidad_personas"></li>
												<li class="list_evento"></li>
												<li class="list_relleno"></li>
												<li class="list_sabor"></li>
												<li class="list_cobertura"></li>
											</ol>
										</div>

						        	</div>
						        </div>
						    </section>
						    <h3>Sabores</h3>
						    <section>
						    	<h2>Sabor</h2>
						        <div class="row">
						        	<div class="medium-8 columns">
						        		<h3>Sabor de torta</h3>
						        		<div class="content_input">
						        			<label for="cantidad">Sabor</label>
						        			<select name="select_sabor" id="select_sabor">
						        				<option value="default">Seleccionar</option>
						        				{% for evento in pasos if evento.tipo == 3 %}
						        					<option value="{{ evento.id }}">{{ evento.nombre }}</option>
						        				{% endfor %}
						        			</select>
						        		</div>
						        	</div>
						        	<div class="medium-4 columns">
						        		
										<div class="tabla_detalle">
											<h2>Pedido</h2>
											<ol>
												<li class="list_cantidad_personas"></li>
												<li class="list_evento"></li>
												<li class="list_relleno"></li>
												<li class="list_sabor"></li>
												<li class="list_cobertura"></li>
											</ol>
										</div>

						        	</div>
						        </div>
						    </section>
						    <h3>Cobertura</h3>
						    <section>
						    	<h2>Cobertura</h2>
						        <div class="row">
						        	<div class="medium-8 columns">
						        		<h3>Cobertura de torta</h3>
						        		<div class="content_input">
						        			<label for="cantidad">Cobertura</label>
						        			<select name="select_cobertura" id="select_cobertura">
						        				<option value="default">Seleccionar</option>
						        				{% for evento in pasos if evento.tipo == 4 %}
						        					<option value="{{ evento.id }}">{{ evento.nombre }}</option>
						        				{% endfor %}
						        			</select>
						        		</div>
						        	</div>
						        	<div class="medium-4 columns">
						        		
										<div class="tabla_detalle">
											<h2>Pedido</h2>
											<ol>
												<li class="list_cantidad_personas"></li>
												<li class="list_evento"></li>
												<li class="list_relleno"></li>
												<li class="list_sabor"></li>
												<li class="list_cobertura"></li>
											</ol>
											<div class="cont_observacion">
												<h2>Observaciones</h2>
												<textarea name="txt_observacion" id="txt_observacion" placeholder="¿Tiene alguna observación?"></textarea>
											</div>
										</div>

						        	</div>
						        </div>
						    </section>
						</div>
					</form>

				</div>
				
				{% if session %}
					<div id="admin_arma">
						<div class="row">
							<div class="medium-12 columns">
								<h3>Administrar</h3>
							</div>
							<div class="medium-3 columns">
								<div>
									<label for="">Evento</label>
									<input type="text" data-tipo="1" class="txt_guardar_nombre">
								</div>
								<div>
									<table>
										{% for evento in pasos if evento.tipo == 1 %}
			        					<tr>
											<td>{{ evento.nombre }}</td>
											<td><a href="#" class="btn_eliminar_item" data-id="{{ evento.id }}">Eliminar</a></td>
										</tr>
				        				{% endfor %}
									</table>
								</div>
							</div>
							<div class="medium-3 columns">
								<div>
									<label for="">Relleno</label>
									<input type="text" data-tipo="2" class="txt_guardar_nombre">
								</div>
								<div>
									<table>
										{% for evento in pasos if evento.tipo == 2 %}
			        					<tr>
											<td>{{ evento.nombre }}</td>
											<td><a href="#" class="btn_eliminar_item" data-id="{{ evento.id }}">Eliminar</a></td>
										</tr>
				        				{% endfor %}
									</table>
								</div>
							</div>
							<div class="medium-3 columns">
								<div>
									<label for="">Sabores</label>
									<input type="text" data-tipo="3" class="txt_guardar_nombre">
								</div>
								<div>
									<table>
										{% for evento in pasos if evento.tipo == 3 %}
			        					<tr>
											<td>{{ evento.nombre }}</td>
											<td><a href="#" class="btn_eliminar_item" data-id="{{ evento.id }}">Eliminar</a></td>
										</tr>
				        				{% endfor %}
									</table>
								</div>
							</div>
							<div class="medium-3 columns">
								<div>
									<label for="">Cobertura</label>
									<input type="text" data-tipo="4" class="txt_guardar_nombre">
								</div>
								<div>
									<table>
										{% for evento in pasos if evento.tipo == 4 %}
			        					<tr>
											<td>{{ evento.nombre }}</td>
											<td><a href="#" class="btn_eliminar_item" data-id="{{ evento.id }}">Eliminar</a></td>
										</tr>
				        				{% endfor %}
									</table>
								</div>
							</div>
						</div>
					</div>
			  	{% endif %}

			</div>

		</div>
    </div>
  
</div>

<div class="reveal" id="modal_confirmar" data-reveal>
	<div class="content-modal">
	  	<h1>Enviar pedido</h1>
	  	<div class="text-center">
	  		<h4>Detalle</h4>
	  		<ul>
	  			<li class="list_cantidad_personas"></li>
				<li class="list_evento"></li>
				<li class="list_relleno"></li>
				<li class="list_sabor"></li>
				<li class="list_cobertura"></li>
	  		</ul>
	  		<p id="m_observacion"></p>
	  	</div>
	  	<div>
		  	<form id="form_informacion" action="{{ url('ajax_enviar_pedido') }}" method="post">
		  		<label for="">Nombre</label>
		  		<input type="text" name="txt_nombre">
		  		<label for="">Correo</label>
		  		<input type="email" name="txt_correo">
		  		<label for="">Teléfono</label>
		  		<input type="email" name="txt_telefono">
		  		<label for="">Comentario</label>
		  		<textarea name="txt_comentario"></textarea>
		  		<div class="text-right">
		  			<button type="button" id="btn_enviar_pedido">Enviar</button>
		  			<button data-close id="btn_cancelar_pedido">Cancelar</button>
		  		</div>
		  	</form>
	  	</div>
	</div>
  	<button class="close-button" data-close aria-label="Close modal" type="button">
    	<span aria-hidden="true">&times;</span>
  	</button>
</div>
{% endblock %}

{% block js %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.js"></script>
	<script src="{{ absolute_url(asset('js/jquery.steps.min.js')) }}"></script>
	<script src="{{ absolute_url(asset('js/arma.js')) }}"></script>
	<script src="{{ absolute_url(asset('js/arma-admin.js')) }}"></script>
{% endblock %}